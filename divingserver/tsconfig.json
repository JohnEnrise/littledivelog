{
    "compileOnSave": true,
    "compilerOptions": {
        "watch": true,
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "outDir": "build/",
        "rootDir": "src/",
        "mapRoot": "src/"
    },
    "include": [
        "./node_modules/@types/**/*.d.ts",
        "./src/**/*.ts"
    ]
}